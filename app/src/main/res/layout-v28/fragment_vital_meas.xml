<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.VitalMeasFragment">

    <TextView
        android:id="@+id/vital_meas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="52dp"
        android:text="Pengukuran Vital"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toEndOf="@id/vital_meas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vital_meas"
        app:layout_constraintBottom_toBottomOf="@id/vital_meas"
        android:src="@drawable/cirle_shadow"
        android:elevation="25dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/profile_pict"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toEndOf="@id/vital_meas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vital_meas"
        app:layout_constraintBottom_toBottomOf="@id/vital_meas"
        android:src="@drawable/ic_user"
        android:elevation="25dp"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@id/vital_meas"
        app:layout_constraintTop_toBottomOf="@id/vital_meas"
        android:background="@drawable/square_shadow"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
                android:id="@+id/blood_sugar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_blood_sugar"
                android:layout_marginTop="12dp"
                android:elevation="25dp"/>
        <TextView
            android:id="@+id/blood_sugar_txt"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Gula Darah"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginTop="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Pembaharuan terakhir"
            android:textColor="@color/grey2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="6sp"
            android:layout_marginTop="8dp"
            android:lineHeight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Pembaharuan terakhir"
            android:textColor="@color/grey2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="6sp"
            android:lineSpacingExtra="-4sp"/>
    </LinearLayout>

