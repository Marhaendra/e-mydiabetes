<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vital.FoodFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/makanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrowleft"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="44dp"/>
    <TextView
        android:id="@+id/makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="98dp"
        android:layout_marginRight="16dp"
        android:text="Makanan"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@drawable/btn_value"
        app:layout_constraintTop_toBottomOf="@id/makanan"
        app:layout_constraintStart_toStartOf="@id/makanan"
        android:layout_marginRight="16dp"
        android:text="10 Desember 2022"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="0sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@drawable/btn_primary_stroke"
        app:layout_constraintTop_toBottomOf="@id/makanan"
        app:layout_constraintStart_toEndOf="@id/date"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Sarapan"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="0sp"/>

    <TextView
        android:id="@+id/tv_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Jenis"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/et_jenis"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jenis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/style_edit_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:hint=""
        android:paddingLeft="16dp"
        android:textColorHint="@color/grey2"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_jenis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Makanan"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_makanan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_makanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/style_edit_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:hint=""
        android:paddingLeft="16dp"
        android:textColorHint="@color/grey2"
        android:textSize="14sp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tv_porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_makanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Porsi"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_porsi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_porsi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/style_edit_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:hint=""
        android:paddingLeft="16dp"
        android:textColorHint="@color/grey2"
        android:textSize="14sp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_jenis"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@id/et_jenis"
        app:layout_constraintTop_toTopOf="@id/et_jenis"
        app:layout_constraintBottom_toBottomOf="@id/et_jenis"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_caretdown"
        android:backgroundTint="@color/grey2"
        app:backgroundTint="@color/grey2"
        android:text="Show"
        android:textColor="@color/transparant"/>

    <Button
        android:id="@+id/btn_makanan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@id/et_makanan"
        app:layout_constraintTop_toTopOf="@id/et_makanan"
        app:layout_constraintBottom_toBottomOf="@id/et_makanan"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_caretdown"
        android:backgroundTint="@color/grey2"
        app:backgroundTint="@color/grey2"
        android:text="Show"
        android:textColor="@color/transparant"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_primary"
        app:layout_constraintTop_toBottomOf="@id/et_porsi"
        app:layout_constraintStart_toStartOf="@id/et_porsi"
        app:layout_constraintEnd_toEndOf="@id/et_porsi"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Simpan"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>