<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/footer_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/footer_vital"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ruler_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ruler_c" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_vital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/footer_body"
        app:layout_constraintRight_toLeftOf="@id/footer_medicine"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/heart_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/footer_medicine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/footer_vital"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pill" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
