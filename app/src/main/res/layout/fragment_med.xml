<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MedFragment">

    <TextView
        android:id="@+id/med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="52dp"
        android:text="Obat"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toEndOf="@id/med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/med"
        app:layout_constraintBottom_toBottomOf="@id/med"
        android:src="@drawable/cirle_shadow"
        android:elevation="25dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/profile_pict"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/med"
        app:layout_constraintBottom_toBottomOf="@id/med"
        android:src="@drawable/ic_user"
        android:elevation="25dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/plus_btn"
        app:layout_constraintTop_toBottomOf="@id/med"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_value"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:id="@+id/plus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/plus_btn"
        app:layout_constraintTop_toTopOf="@id/plus_btn"
        app:layout_constraintBottom_toBottomOf="@id/plus_btn"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_plus"/>
    <TextView
        android:id="@+id/plus_text"
        app:layout_constraintStart_toEndOf="@id/plus_icon"
        app:layout_constraintTop_toTopOf="@id/plus_btn"
        app:layout_constraintBottom_toBottomOf="@id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Tambah"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/bar"
        app:layout_constraintTop_toBottomOf="@id/plus_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:src="@drawable/btn_primary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/medlist_text"
        app:layout_constraintStart_toEndOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Daftar Konsumsi Obat Hari Ini"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"/>

    <!--footer-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/layout_navbar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>